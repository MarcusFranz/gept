{
  "name": "GePT Full Stack",
  "dockerComposeFile": "docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspaces/gept",
  "remoteUser": "vscode",

  "forwardPorts": [8000, 4321],
  "portsAttributes": {
    "8000": {
      "label": "Engine API",
      "onAutoForward": "notify"
    },
    "4321": {
      "label": "Web Frontend",
      "onAutoForward": "openBrowser"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postAttachCommand": "pgrep -f 'ssh.*5432:localhost:5432.*150.136.170.128' > /dev/null 2>&1 || ssh -i ~/.ssh/ampere_key -L 5432:localhost:5432 -o ServerAliveInterval=60 -o ServerAliveCountMax=3 -o StrictHostKeyChecking=no -N -f ubuntu@150.136.170.128",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "astro-build.astro-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/gept/packages/engine/.venv/bin/python"
      }
    }
  }
}
