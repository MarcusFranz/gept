[Unit]
Description=GePT hourly data collector
After=network.target postgresql.service

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/gept/current/packages/model
Environment="PATH=/home/ubuntu/gept/venv/bin:/usr/bin"
Environment="PYTHONPATH=/home/ubuntu/gept/current/packages/model/collectors"
EnvironmentFile=/home/ubuntu/gept/.env
ExecStart=/home/ubuntu/gept/venv/bin/python collectors/collect_hourly_pg.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
