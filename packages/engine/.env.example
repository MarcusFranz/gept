# Database connection to Ampere server
# Use SSH tunnel: ssh -i oracle_key.pem -L 5432:localhost:5432 ubuntu@<SERVER_IP>
DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/osrs_data

# Discord webhook for alerts (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Thresholds
MIN_EV_THRESHOLD=0.005
DATA_STALE_SECONDS=600

# API settings
API_HOST=0.0.0.0
API_PORT=8000
INTERNAL_API_KEY=your-internal-api-key

# Database pool
DB_POOL_SIZE=5

# Outcome Database (optional - for ML feedback loop)
# Used to store trade outcomes reported by users via Discord bot
# If not set, trade outcome recording is disabled
# OUTCOME_DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/gept
# OUTCOME_DB_POOL_SIZE=5

# OSRS Wiki API (optional - for buy limit fallback)
# Used when database doesn't have buy limit data for an item
WIKI_API_ENABLED=true
WIKI_API_CACHE_TTL=3600
# WIKI_API_USER_AGENT=GePT-Recommendation-Engine/1.0

# Webhook integration (required for active-trade price alerts)
# Shared secret for bidirectional webhook signing
WEBHOOK_SECRET=your-webhook-secret
# Web app endpoint to receive alert webhooks
WEB_APP_WEBHOOK_URL=https://your-web-app.example/api/webhooks/alerts
# Web app endpoint to resync active trades on engine startup
WEB_APP_RESYNC_URL=https://your-web-app.example/api/trades/resync
# Disable price-drop monitor in non-prod if needed
PRICE_DROP_MONITOR_ENABLED=true
