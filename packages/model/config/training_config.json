{
  "version": "1.0.0",
  "description": "Configuration for GE flipping model training",

  "data_split": {
    "train_ratio": 0.70,
    "val_ratio": 0.15,
    "test_ratio": 0.15,
    "comment": "Temporal splits - never use future data to predict past"
  },

  "targets": {
    "offsets": [0.015, 0.02, 0.025],
    "windows_hours": [12, 24, 48],
    "tax_rate": 0.02,
    "comment": "Fill probability targets for various offset/window combinations"
  },

  "model": {
    "type": "LogisticRegression",
    "regularization_C": 1.0,
    "max_iter": 1000,
    "class_weight": "balanced",
    "calibration_method": "isotonic",
    "calibration_cv": 3
  },

  "validation_thresholds": {
    "min_accuracy": 0.52,
    "min_roc_auc": 0.50,
    "max_brier_score": 0.30,
    "min_imbalance_rate": 0.01,
    "comment": "Models must exceed these thresholds to be considered valid"
  },

  "item_tiers": {
    "tier_1": {
      "min_completeness": 0.40,
      "min_avg_volume": 50000,
      "min_days": 365,
      "min_price_completeness": 0.70
    },
    "tier_2": {
      "min_completeness": 0.30,
      "min_avg_volume": 10000,
      "min_days": 180,
      "min_price_completeness": 0.50
    },
    "tier_3": {
      "min_completeness": 0.15,
      "min_avg_volume": 1000,
      "min_days": 30,
      "min_price_completeness": 0.30
    }
  },

  "features": {
    "ma_hours": [1, 4, 8, 24, 48, 168],
    "return_hours": [0.25, 0.5, 1, 2, 4, 8, 24],
    "volatility_hours": [1, 4, 24],
    "range_hours": [1, 4, 8, 12, 24, 48],
    "drop_first_n_rows": 300,
    "comment": "Feature engineering configuration"
  }
}
