---
import Layout from '../layouts/Layout.astro';

// Redirect if already logged in
if (Astro.locals.session) {
  return Astro.redirect('/');
}
---

<Layout title="Forgot Password">
  <div class="auth-page">
    <div class="auth-card">
      <div class="auth-header">
        <img src="/images/logo-icon.png" alt="GePT" class="auth-logo" />
        <h1>Reset your password</h1>
        <p>Enter your email and we'll send you a reset link</p>
      </div>

      <form id="forgot-form" class="auth-form">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            autocomplete="email"
            placeholder="you@example.com"
          />
        </div>

        <div id="error-message" class="error-message"></div>
        <div id="success-message" class="success-message"></div>

        <button type="submit" class="btn-primary" id="submit-btn">
          Send Reset Link
        </button>
      </form>

      <p class="auth-footer">
        Remember your password? <a href="/login">Sign in</a>
      </p>
    </div>
  </div>
</Layout>

<script>
  import { requestPasswordReset } from '../lib/auth-client';

  const form = document.getElementById('forgot-form') as HTMLFormElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;
  const successMessage = document.getElementById('success-message') as HTMLDivElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = (document.getElementById('email') as HTMLInputElement).value;

    errorMessage.textContent = '';
    successMessage.textContent = '';
    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';

    try {
      const result = await requestPasswordReset({
        email,
        redirectTo: '/reset-password',
      });

      if (result.error) {
        errorMessage.textContent = result.error.message || 'Failed to send reset email';
        submitBtn.disabled = false;
        submitBtn.textContent = 'Send Reset Link';
      } else {
        // Success - show confirmation
        successMessage.textContent = 'If an account exists with this email, you will receive a password reset link shortly.';
        submitBtn.textContent = 'Email Sent';
        // Keep button disabled after success
      }
    } catch (err) {
      errorMessage.textContent = 'Something went wrong. Please try again.';
      submitBtn.disabled = false;
      submitBtn.textContent = 'Send Reset Link';
    }
  });
</script>

<style>
  .auth-page {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4);
  }

  .auth-card {
    background: linear-gradient(145deg, var(--surface-2), var(--surface-1));
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    max-width: 360px;
    width: 100%;
    box-shadow: var(--shadow-md);
    backdrop-filter: blur(14px);
  }

  .auth-header {
    text-align: center;
    margin-bottom: var(--space-5);
  }

  .auth-logo {
    width: 64px;
    height: 64px;
    margin-bottom: var(--space-4);
  }

  .auth-header h1 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-1);
  }

  .auth-header p {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .form-group label {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--text-primary);
  }

  .form-group input {
    padding: var(--space-2) var(--space-3);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    background: var(--glass-bg);
    color: var(--text-primary);
    font-size: var(--font-size-sm);
    transition: border-color var(--transition-fast);
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--accent);
  }

  .form-group input::placeholder {
    color: var(--text-muted);
  }

  .error-message {
    color: var(--danger);
    font-size: var(--font-size-sm);
    min-height: 1.25rem;
  }

  .error-message:empty {
    display: none;
  }

  .success-message {
    color: var(--success);
    font-size: var(--font-size-sm);
    min-height: 1.25rem;
    line-height: 1.4;
  }

  .success-message:empty {
    display: none;
  }

  .btn-primary {
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    font-size: var(--font-size-sm);
    font-weight: 500;
    cursor: pointer;
    transition: opacity var(--transition-fast);
    border: none;
    background: linear-gradient(135deg, var(--accent) 0%, var(--action) 100%);
    color: var(--btn-text-dark);
    box-shadow: 0 10px 22px var(--accent-glow);
  }

  .btn-primary:hover:not(:disabled) {
    filter: brightness(1.05);
  }

  .btn-primary:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .auth-footer {
    margin-top: var(--space-5);
    text-align: center;
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
  }

  .auth-footer a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 500;
  }

  .auth-footer a:hover {
    text-decoration: underline;
  }
</style>
