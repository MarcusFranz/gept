---
import Layout from '../layouts/Layout.astro';

// Redirect if already logged in
if (Astro.locals.session) {
  return Astro.redirect('/');
}
---

<Layout title="AI-Powered Grand Exchange Flipping" description="Get AI-powered flip recommendations for Old School RuneScape. Track your trades, maximize profits, and flip smarter with GePT.">
  <div class="landing">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container hero-content">
        <div class="hero-badge">
          <span class="tier-badge is-beta">BETA</span>
          <span>Now accepting beta testers</span>
        </div>
        <h1 class="hero-title">
          Flip smarter with <span class="text-accent">AI-powered</span> recommendations
        </h1>
        <p class="hero-subtitle">
          GePT analyzes Grand Exchange data to find profitable flips for Old School RuneScape.
          Get personalized recommendations based on your capital and risk tolerance.
        </p>
        <div class="hero-actions">
          <a href="/signup" class="btn btn-primary btn-lg">Get Started Free</a>
          <a href="/login" class="btn btn-ghost btn-lg">Sign In</a>
        </div>
        <p class="hero-note">
          Free during beta. No credit card required.
        </p>
      </div>
    </section>

    <!-- Features Section -->
    <section class="features">
      <div class="container">
        <h2 class="section-title">Why GePT?</h2>
        <div class="features-grid">
          <div class="feature-card">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
              </svg>
            </div>
            <h3>AI Recommendations</h3>
            <p>Machine learning analyzes millions of trades to find profitable opportunities you might miss.</p>
          </div>

          <div class="feature-card">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
            </div>
            <h3>Real-Time Data</h3>
            <p>Prices update every few minutes. Get fresh recommendations based on current market conditions.</p>
          </div>

          <div class="feature-card">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 20V10M18 20V4M6 20v-4"/>
              </svg>
            </div>
            <h3>Track Performance</h3>
            <p>Log your trades and see your profit history. Know your win rate and identify your best flips.</p>
          </div>

          <div class="feature-card">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="7" height="7"/>
                <rect x="14" y="3" width="7" height="7"/>
                <rect x="14" y="14" width="7" height="7"/>
                <rect x="3" y="14" width="7" height="7"/>
              </svg>
            </div>
            <h3>8 GE Slots</h3>
            <p>Get recommendations for all 8 Grand Exchange slots. Maximize your flipping potential.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works">
      <div class="container">
        <h2 class="section-title">How It Works</h2>
        <div class="steps">
          <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
              <h3>Set Your Capital</h3>
              <p>Tell us how much GP you have to invest. We'll find flips that fit your budget.</p>
            </div>
          </div>
          <div class="step">
            <div class="step-number">2</div>
            <div class="step-content">
              <h3>Choose Your Style</h3>
              <p>Passive for slow but steady margins, or active for quick high-volume flips.</p>
            </div>
          </div>
          <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
              <h3>Start Flipping</h3>
              <p>Get AI-powered recommendations with buy/sell prices, quantities, and expected profit.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
      <div class="container cta-content">
        <h2>Ready to flip smarter?</h2>
        <p>Join the beta and start getting AI-powered recommendations today.</p>
        <a href="/signup" class="btn btn-primary btn-lg">Create Free Account</a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .landing {
    --section-padding: var(--space-6);
  }

  @media (min-width: 768px) {
    .landing {
      --section-padding: 4rem;
    }
  }

  /* Hero */
  .hero {
    padding: var(--section-padding) 0;
    text-align: center;
    background: linear-gradient(180deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
    border-bottom: 1px solid var(--border);
  }

  .hero-content {
    max-width: 680px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: var(--bg-tertiary);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    margin-bottom: var(--space-5);
  }

  .hero-badge .tier-badge {
    position: static;
    transform: none;
    margin-left: 0;
  }

  .hero-title {
    font-family: 'Rajdhani', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }
  }

  .text-accent {
    color: var(--accent);
  }

  .hero-subtitle {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-5);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-4);
  }

  .hero-note {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
    cursor: pointer;
    border: none;
  }

  .btn-lg {
    padding: var(--space-3) var(--space-5);
    font-size: var(--font-size-base);
  }

  .btn-primary {
    background: var(--accent);
    color: var(--bg-primary);
  }

  .btn-primary:hover {
    background: var(--accent-hover);
  }

  .btn-ghost {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border);
  }

  .btn-ghost:hover {
    background: var(--bg-hover);
    border-color: var(--border-light);
  }

  /* Features */
  .features {
    padding: var(--section-padding) 0;
    background: var(--bg-primary);
  }

  .section-title {
    font-family: 'Rajdhani', sans-serif;
    font-size: var(--font-size-2xl);
    font-weight: 700;
    text-align: center;
    margin-bottom: var(--space-6);
    color: var(--text-primary);
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .feature-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-5);
    text-align: center;
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto var(--space-4);
    color: var(--accent);
  }

  .feature-icon svg {
    width: 100%;
    height: 100%;
  }

  .feature-card h3 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin-bottom: var(--space-2);
    color: var(--text-primary);
  }

  .feature-card p {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    line-height: 1.5;
  }

  /* How It Works */
  .how-it-works {
    padding: var(--section-padding) 0;
    background: var(--bg-secondary);
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
    max-width: 600px;
    margin: 0 auto;
  }

  .step {
    display: flex;
    gap: var(--space-4);
    align-items: flex-start;
  }

  .step-number {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent);
    color: var(--bg-primary);
    font-weight: 700;
    font-size: var(--font-size-lg);
    border-radius: var(--radius-md);
  }

  .step-content h3 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin-bottom: var(--space-1);
    color: var(--text-primary);
  }

  .step-content p {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    line-height: 1.5;
  }

  /* CTA */
  .cta {
    padding: var(--section-padding) 0;
    background: var(--bg-primary);
  }

  .cta-content {
    text-align: center;
    max-width: 480px;
    margin: 0 auto;
  }

  .cta h2 {
    font-family: 'Rajdhani', sans-serif;
    font-size: var(--font-size-2xl);
    font-weight: 700;
    margin-bottom: var(--space-3);
    color: var(--text-primary);
  }

  .cta p {
    color: var(--text-secondary);
    margin-bottom: var(--space-5);
  }

  /* Tier badge (copied from layout) */
  .tier-badge {
    padding: 2px 6px;
    font-size: 10px;
    font-weight: 700;
    border-radius: 3px;
    letter-spacing: 0.5px;
  }

  .tier-badge.is-beta {
    background: linear-gradient(135deg, var(--tier-beta) 0%, var(--tier-beta-light) 100%);
    color: var(--btn-text-light);
  }
</style>
