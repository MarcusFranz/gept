---
import '../styles/global.css';
import ToastContainer from '../components/ToastContainer';
import FeedbackWidget from '../components/FeedbackWidget';
import SessionMonitor from '../components/SessionMonitor';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = 'AI-powered Grand Exchange flipping recommendations for Old School RuneScape. Get real-time item suggestions and track your profits.',
  image = '/images/og-image.png'
} = Astro.props;

const siteUrl = import.meta.env.SITE || 'https://gept.gg';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const fullTitle = `${title} | GePT`;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="GePT" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:site_name" content="GePT" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${image}`} />

    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#0b0d12" />
    <meta name="msapplication-TileColor" content="#0b0d12" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet" />

    <title>{fullTitle}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="app">
      <nav class="nav">
        <div class="container">
          <div class="nav-inner">
            <a href="/" class="nav-brand">
              <img src="/images/logo-icon.png" alt="GePT" class="nav-logo" />
              <span class="nav-title-wrap">
                <span class="nav-title">GePT</span>
                <span class="tier-badge is-beta">BETA</span>
              </span>
            </a>
            <!-- Nav links hidden for now - not yet implemented
            <div id="mobile-nav" class="nav-links">
              <a href="/history" class="nav-link">History</a>
              <a href="/portfolio" class="nav-link">Portfolio</a>
              <a href="/settings" class="nav-link">Settings</a>
            </div>
            -->
            <div class="nav-actions">
              <!-- Mobile menu hidden - no nav links yet
              <button class="nav-menu-btn" aria-label="Menu" aria-expanded="false" aria-controls="mobile-nav">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 12h18M3 6h18M3 18h18"/>
                </svg>
              </button>
              -->
              <a href="https://discord.gg/dUCqkMdRJP" target="_blank" rel="noopener noreferrer" class="nav-discord" aria-label="Join our Discord" title="Join Discord">
                <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                  <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
                </svg>
              </a>
              <button class="theme-toggle" aria-label="Toggle theme" title="Toggle theme">
              <svg class="icon-sun" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="5"/>
                <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
              </svg>
              <svg class="icon-moon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
              </svg>
            </button>
              <a href="/account" class="nav-account" aria-label="Account" title="Account">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="8" r="4"/>
                  <path d="M4 20c0-4 4-6 8-6s8 2 8 6"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </nav>

      <div class="discord-banner" id="discord-banner">
        <div class="container">
          <div class="discord-banner-inner">
            <a href="https://discord.gg/dUCqkMdRJP" target="_blank" rel="noopener noreferrer" class="discord-banner-link">
              <svg viewBox="0 0 24 24" fill="currentColor" class="discord-banner-icon">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
              </svg>
              <span class="discord-banner-text">Join our Discord for trade alerts, strategy talk, and feature requests</span>
              <span class="discord-banner-cta">Join Server</span>
            </a>
            <button class="discord-banner-dismiss" aria-label="Dismiss" id="discord-banner-dismiss">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 6L6 18M6 6l12 12"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <main class="main">
        <slot />
      </main>

      <footer class="footer">
        <div class="container">
          <div class="footer-content">
            <div class="footer-brand">
              <img src="/images/logo-icon.png" alt="GePT" class="footer-logo" />
              <span class="footer-title">GePT</span>
            </div>
            <p class="footer-tagline">AI-powered Grand Exchange flipping</p>
            <p class="footer-disclaimer">Not affiliated with Jagex Ltd. OSRS is a trademark of Jagex Ltd.</p>
          </div>
        </div>
      </footer>
    </div>

    <ToastContainer client:load />
    <FeedbackWidget client:load />
    <SessionMonitor client:load />

    <script>
      // Theme initialization (runs immediately to prevent flash)
      try {
        const savedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.dataset.theme = savedTheme;
      } catch {
        document.documentElement.dataset.theme = 'dark';
      }
      // Hide dismissed Discord banner immediately to prevent flash
      try {
        if (localStorage.getItem('discord-banner-dismissed')) {
          document.getElementById('discord-banner')?.remove();
        }
      } catch {
        // localStorage unavailable (private browsing, disabled storage) - show banner
      }
    </script>
    <script>
      function initPage() {
        // Theme toggle
        const themeToggle = document.querySelector('.theme-toggle');
        themeToggle?.addEventListener('click', () => {
          const current = document.documentElement.dataset.theme;
          const next = current === 'dark' ? 'light' : 'dark';
          document.documentElement.dataset.theme = next;
          try {
            localStorage.setItem('theme', next);
          } catch {
            // Ignore localStorage errors (quota exceeded, private browsing, etc.)
          }
        });

        // Mobile menu toggle
        const menuBtn = document.querySelector('.nav-menu-btn');
        const navLinks = document.querySelector('.nav-links');
        menuBtn?.addEventListener('click', () => {
          const isOpen = navLinks?.classList.toggle('open');
          menuBtn.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
        });

        // Discord banner dismiss (banner may already be removed by the immediate script)
        const banner = document.getElementById('discord-banner');
        if (banner) {
          document.getElementById('discord-banner-dismiss')?.addEventListener('click', () => {
            banner.remove();
            try {
              localStorage.setItem('discord-banner-dismissed', '1');
            } catch {
              // Storage unavailable - dismiss works for current page view only
            }
          });
        }
      }

      // Run on initial load and after each navigation
      document.addEventListener('astro:page-load', initPage);
    </script>
  </body>
</html>

<style>
  .app {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .nav {
    background-color: var(--nav-bg);
    backdrop-filter: blur(14px);
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: var(--shadow-sm);
  }

  .nav-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 56px;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--text-primary);
    font-weight: 700;
    font-size: var(--font-size-xl);
  }

  .nav-logo {
    width: 40px;
    height: auto;
    filter: drop-shadow(0 6px 14px rgba(126, 231, 135, 0.25));
  }

  .nav-title-wrap {
    position: relative;
  }

  .tier-badge {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 100%;
    margin-left: 6px;
    padding: 3px 6px;
    font-size: 9px;
    font-weight: 700;
    border-radius: 999px;
    letter-spacing: 0.5px;
    /* Free style - green */
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
    color: var(--btn-text-dark);
  }

  .tier-badge.is-pro {
    /* Pro style - gold */
    background: linear-gradient(135deg, var(--tier-pro) 0%, var(--gold) 50%, var(--tier-pro-dark) 100%);
    color: var(--btn-text-dark);
  }

  .tier-badge.is-beta {
    /* Beta style - blue/purple */
    background: linear-gradient(135deg, var(--tier-beta) 0%, var(--tier-beta-light) 100%);
    color: var(--btn-text-light);
  }

  .nav-title {
    font-family: var(--font-display);
    font-size: 24px;
    font-weight: 700;
    color: var(--accent);
    letter-spacing: 0.5px;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  .nav-link {
    padding: var(--space-2) var(--space-3);
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    font-weight: 500;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .nav-link:hover {
    color: var(--text-primary);
    background-color: var(--bg-hover);
  }

  .nav-link.active {
    color: var(--accent);
    background-color: var(--accent-light);
  }

  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .theme-toggle:hover {
    color: var(--text-primary);
    border-color: var(--border-light);
    background-color: var(--bg-hover);
  }

  .theme-toggle svg {
    width: 18px;
    height: 18px;
  }

  .theme-toggle .icon-sun {
    display: none;
  }

  .theme-toggle .icon-moon {
    display: block;
  }

  [data-theme="light"] .theme-toggle .icon-sun {
    display: block;
  }

  [data-theme="light"] .theme-toggle .icon-moon {
    display: none;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .nav-discord {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    background: var(--glass-bg);
    transition: all var(--transition-fast);
  }

  .nav-discord:hover {
    color: var(--discord);
    border-color: var(--discord);
    background-color: color-mix(in srgb, var(--discord) 10%, transparent);
  }

  .nav-discord svg {
    width: 18px;
    height: 18px;
  }

  .nav-account {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    background: var(--glass-bg);
    transition: all var(--transition-fast);
  }

  .nav-account:hover {
    color: var(--text-primary);
    border-color: var(--border-light);
    background-color: var(--bg-hover);
  }

  .nav-account svg {
    width: 18px;
    height: 18px;
  }

  .nav-menu-btn {
    display: none;
    padding: var(--space-2);
    background: none;
    border: none;
    color: var(--text-primary);
    cursor: pointer;
  }

  .nav-menu-btn svg {
    width: 24px;
    height: 24px;
  }

  .main {
    flex: 1;
  }

  .footer {
    padding: var(--space-5) 0;
    border-top: 1px solid var(--border);
    margin-top: auto;
    background-color: var(--bg-secondary);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .footer-logo {
    width: 24px;
    height: auto;
    opacity: 0.7;
  }

  .footer-title {
    font-family: var(--font-display);
    font-size: 18px;
    font-weight: 700;
    color: var(--accent);
    letter-spacing: 0.5px;
  }

  .footer-tagline {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
  }

  .footer-disclaimer {
    font-size: var(--font-size-xs);
    color: var(--text-muted);
    margin-top: var(--space-2);
  }

  /* Discord banner */
  .discord-banner {
    background: color-mix(in srgb, var(--discord) 18%, transparent);
    color: var(--text-primary);
    border-bottom: 1px solid color-mix(in srgb, var(--discord) 30%, transparent);
  }

  .discord-banner-inner {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) 0;
  }

  .discord-banner-link {
    flex: 1;
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--text-primary);
    min-width: 0;
  }

  .discord-banner-link:hover .discord-banner-cta {
    background: var(--discord);
    color: #fff;
  }

  .discord-banner-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .discord-banner-text {
    font-size: var(--font-size-sm);
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .discord-banner-cta {
    flex-shrink: 0;
    padding: var(--space-1) var(--space-3);
    background: rgba(88, 101, 242, 0.2);
    border-radius: var(--radius-md);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all var(--transition-fast);
  }

  .discord-banner-dismiss {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .discord-banner-dismiss:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.15);
  }

  .discord-banner-dismiss svg {
    width: 16px;
    height: 16px;
  }

  @media (max-width: 768px) {
    .nav-links {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      flex-direction: column;
      background-color: var(--bg-secondary);
      border-bottom: 1px solid var(--border);
      padding: var(--space-2);
      display: none;
    }

    .nav-links.open {
      display: flex;
    }

    .nav-link {
      width: 100%;
      text-align: center;
    }

    .nav-menu-btn {
      display: block;
    }

    .discord-banner-cta {
      display: none;
    }

    .discord-banner-text {
      white-space: normal;
    }
  }
</style>
